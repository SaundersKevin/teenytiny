PRINT "Enter a number: "
INPUT num

PRINT "Here is the collatz sequence for your number:"

IF num <= 0
	GOTO end
ENDIF

LABEL check

PRINT num

IF num == 1
	GOTO end
ENDIF

LET a = num

WHILE a > 0

	IF a == 2
		GOTO even
	ENDIF

	IF a == 1
		GOTO odd
	ENDIF

	LET a = a - 2

ENDWHILE

LABEL even
	LET num = num / 2
	GOTO check

LABEL odd
	LET num = 3 * num
	LET num = num + 1
	GOTO check

LABEL end
